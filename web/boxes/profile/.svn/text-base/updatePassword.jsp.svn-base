

<div style="position: relative; float: left; width:400px;">
	<form method="post" id="target" action="Controller?action=updatePassword">
		<div style="position: relative; float: left; width:400px; padding-top:20px;">
			<div style="position: relative; float: left; width:200px; margin-bottom:10px;">
				<p>Current password:</p>
			</div>
			<div style="position: relative; float: left; width:200px;">
				<input type="password" style="width:150px; border: 1px solid #666666;" name="currentPass"></input>
			</div>
		</div>	
		
		<div style="position: relative; float: left; width:400px;">
			<div style="position: relative; float: left; width:200px; margin-bottom:10px;">
				<p>New password:</p>
			</div>
			<div style="position: relative; float: left; width:200px;">
				<input type="password" style="width:150px; border: 1px solid #666666;" name="newPass"></input>
			</div>
		</div>
		
		<div style="position: relative; float: left; width:400px;">	
			<div style="position: relative; float: left; width:200px; margin-bottom:10px;">
				<p>Confirm new password:</p>
			</div>
			<div style="position: relative; float: left; width:200px;">
				<input type="password" style="width:150px; border: 1px solid #666666;" name="confirmPass"></input>
			</div>	
		</div>
	</form>
</div>